<script>
  (function (dataTheme) {
    let storedTheme;
    try {
      storedTheme = JSON.parse(localStorage.getItem('amzrk2-theme'));
    } catch (e) {
      storedTheme = null;
    }
    if (storedTheme && storedTheme !== dataTheme) {
      document.body.setAttribute('data-theme', storedTheme);
    }
  })(document.body.getAttribute('data-theme'));
</script>
